<odoo>
    <record id="pms_room_type_view_form" model="ir.ui.view">
        <field name="name">pms.room.type.wubook.connector.form</field>
        <field name="model">pms.room.type</field>
        <field name="inherit_id" ref="connector_pms.pms_room_type_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="/form/sheet/notebook/page[@name='connector']"
                position="attributes"
            >
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath
                expr="/form/sheet/notebook/page[@name='connector']"
                position="inside"
            >
                <group string="Wubook">
                    <field name="channel_wubook_bind_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="backend_id" />
                            <field name="odoo_id" />
                            <field name="external_id" required="1" />
                            <field name="sync_date" />
                            <button
                                type="object"
                                title="Resynchronize"
                                name="resync"
                                class="fa fa-refresh"
                            />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
