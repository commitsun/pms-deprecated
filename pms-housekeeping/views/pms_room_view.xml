                                <div>
                                    <field name="clean_status_now" />
                                </div>
                                <div style="font-size: 1.2em;">
                                    <field name="name" />
                                </div>
                                <div>
                                    <field name="clean_status" />
                                </div>
                                <div class="float-right">
                                    <field
                                        name="housekeeping_ids"
                                        widget="many2many_tags"
                                    />
                                </div>
