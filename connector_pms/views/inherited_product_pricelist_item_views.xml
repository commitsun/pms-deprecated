<?xml version="1.0"?>
<odoo>

    <record id="product_pricelist_item_form_view" model="ir.ui.view">
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <notebook>
                    <page name="connector" string="Channel Connector">
                        <group string="Hotel Channel Bindings">
                            <field name="channel_bind_ids" nolabel="1">
                                <tree>
                                    <field name="backend_id"/>
                                    <field name="channel_pushed"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <menuitem name="Pricelist" id="pricelist_menu"
              action="product.product_pricelist_action2" sequence="22"
              parent="hotel.configuration_others" />

</odoo>
